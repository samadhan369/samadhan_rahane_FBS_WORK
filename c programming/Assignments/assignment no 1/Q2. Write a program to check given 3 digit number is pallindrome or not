#include <stdio.h>

int main() {
    int number, rev;
    int r1, r2, r3;

    printf("Enter a 3-digit number: ");
    scanf("%d", &number);

    r1 = number % 10;           
    r2 = (number / 10) % 10;    
    r3 = number / 100;          

    rev = r1 * 100 + r2 * 10 + r3;

    printf("Reversed number: %d\n", rev);

    if (rev == number) {
        printf("Number %d is a palindrome.\n", number);
    } else {
        printf("Number %d is not a palindrome.\n", number);
    }

    return 0;
}
